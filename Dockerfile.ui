# Streamlit UI container (frontend/app.py)

# 1) Base image
FROM python:3.11-slim

# 2) Basic Python runtime settings + Streamlit config
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    STREAMLIT_SERVER_PORT=8501 \
    STREAMLIT_SERVER_ADDRESS=0.0.0.0

# 3) Workdir inside container
WORKDIR /app

# 4) OS-level deps (only keep build-essential if any dependency needs compilation)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
 && rm -rf /var/lib/apt/lists/*

# 5) Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 6) Copy only what the UI needs
COPY frontend ./frontend

# 7) Expose Streamlit port
# Note: EXPOSE is metadata only. The UI is publicly accessible only if you publish it via docker-compose ports,
# or route traffic to it via nginx.
EXPOSE 8501

# 8) Run as non-root user (basic hardening)
RUN useradd -m appuser && chown -R appuser:appuser /app
USER appuser

# 9) Run Streamlit UI
CMD ["streamlit", "run", "frontend/app.py", "--server.port=8501", "--server.address=0.0.0.0"]